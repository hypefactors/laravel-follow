{
    "name": "hypefactors/laravel-follow",
    "description": "Laravel 8 Follow System for Eloquent models.",
    "keywords": [
        "php",
        "hypefactors",
        "laravel",
        "follow"
    ],
    "homepage": "https://hypefactors.com",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Hypefactors A/S",
            "email": "support@hypefactors.com",
            "homepage": "https://hypefactors.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4",
        "hypefactors/php-code-standards": "^1.0",
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Hypefactors\\Laravel\\Follow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hypefactors\\Laravel\\Follow\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "component": "package",
        "branch-alias": {
            "dev-master": "7.0.x-dev"
        },
        "laravel": {
            "providers": [
                "Hypefactors\\Laravel\\Follow\\FollowServiceProvider"
            ]
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix --verbose --ansi --show-progress=estimating",
        "test": "vendor/bin/phpunit --verbose --colors=always"
    }
}
